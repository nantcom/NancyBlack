@inherits NantCom.NancyBlack.NancyBlackRazorViewBase
@using Newtonsoft.Json.Linq
@{
    Layout = "_admin";
}
@section Title
{
    Administration - Commerce - Customer List
}

<div id="PrintReceipt">

    <div class="page-header">
        <h1>Receipt Summary</h1>
    </div>

    <table class="table table-striped table-hover">
        <thead>
        <th>
            Identifier
        </th>
        <th>
            SO
        </th>
        <th>LogDate</th>
        <th>Date</th>
        <th>Account</th>
        <th>SO Status</th>
        <th>Status</th>
        <th><div class="text-right">Ammount</div></th>
        <th>
            Attachments
        </th>
        <th>
            Print
        </th>
        </thead>
        <tbody>
            @foreach (var item in this.Model.Data)
            {
            <tr>
                <td>
                    @item.Receipt.Identifier
                </td>
                <td>
                    @item.SaleOrder.Id
                </td>
                <td>@item.PaymentLog.__createdAt.ToString("dd MMM yy")</td>
                <td>@item.PaymentLog.PaymentDate.ToString("dd MMM yy")</td>
                <td>@item.PaymentLog.PaymentSource</td>
                <td>@item.SaleOrder.Status , @item.SaleOrder.PaymentStatus</td>
                <td>@item.Status</td>
                <td><div class="text-right">@item.PaymentLog.Amount.ToString("0,0")</div></td>
                <td>
                    @foreach (var file in item.SaleOrder.Attachments)
                    {
                        <a class="btn btn-default" href="@file.Url" target="_blank">
                            <i class="fa fa-image"></i>
                        </a>
                    }
                </td>
                <td>
                    <a href="/__commerce/saleorder/@(item.SaleOrder.Id)/receipt" class="btn btn-default" target="_blank">
                        <i class="fa fa-print"></i>
                    </a>
                </td>
            </tr>


            }
        </tbody>

    </table>

</div>
