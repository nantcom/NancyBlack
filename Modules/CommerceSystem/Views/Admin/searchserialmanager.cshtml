@inherits NantCom.NancyBlack.NancyBlackRazorViewBase
@{
    Layout = "_admin.cshtml";
}

@section Head
{
    <style>
        body, html {
            height: 100%;
        }

        body {
            overflow-x: scroll;
        }
    </style>
}

@section Scripts
{
    <script src="/NancyBlack/Modules/CommerceSystem/Views/Admin/js/search-serial-manager.js"></script>

}

<div ng-module="Page"
     ng-controller="PageController as ctrl"
     ncb-datacontext>

    <div class="page-header">
        <h1>Search By Serial</h1>
    </div>

    <p class="input-group">
        <input type="text" class="form-control" ng-model="keyword" placeholder="Serial like ex: P950HP6" />
        <span class="input-group-btn">
            <button type="button" class="btn btn-success" ng-click="ctrl.searchBySerial()">
                <i class="glyphicon glyphicon-search"></i>
            </button>
        </span>
    </p>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Date</th>
                <th>Source</th>
                <th>Result</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="record in results">
                <td>{{$index + 1}}</td>
                <td>{{record.RecordDate | date:'dd MMMM yyyy, HH:mm'}}</td>
                <td>{{record.Source}}</td>
                <td>{{record.Result}}</td>
            </tr>
        </tbody>
    </table>

</div>
