@inherits NantCom.NancyBlack.NancyBlackRazorViewBase

@{
    Layout = "_basecode";
}

<div class="jumbotron">
    <h1 class="text-warning">Not Authorized</h1>
    <p>
        You were not allowed to access this resource.
    </p>
    @if (this.RenderContext.Context.CurrentUser != null &&
                  this.RenderContext.Context.CurrentUser.UserName != NantCom.NancyBlack.Modules.MembershipSystem.NcbUser.Anonymous)
    {
        <p>
            Your Current Permission:
            <ul>
                @foreach (var item in this.RenderContext.Context.CurrentUser.Claims)
                {
                    <li>@item</li>
                }
            </ul>
        </p>

        <a class="btn btn-lg btn-success" href="/__membership/enroll">
            Have Code?
        </a>
    }
    else
    {
        <a class="btn btn-lg btn-success" href="/__membership/login">
            Login
        </a>
    }
</div>
